# Top-most EditorConfig file
root = true

[*.py]
  end_of_line=lf
  insert_final_newline=true
  indent_style=space
  indent_size=4
  trim_trailing_whitespace=true

[*.c]
  end_of_line=lf
  insert_final_newline=true
  indent_style=space
  indent_size=4
  trim_trailing_whitespace=true

[*.h]
  end_of_line=lf
  insert_final_newline=true
  indent_style=space
  indent_size=4
  trim_trailing_whitespace=true

[*.sh]
  end_of_line=lf
  insert_final_newline=true
  indent_style=tab
  indent_size=4
  trim_trailing_whitespace=true

[*.bat]
  end_of_line=lf
  insert_final_newline=true
  indent_style=tab
  indent_size=4
  trim_trailing_whitespace=true

[*.mak]
  end_of_line=lf
  insert_final_newline=true
  indent_style=tab
  indent_size=8
  trim_trailing_whitespace=true

[Makefile]
  end_of_line=lf
  insert_final_newline=true
  indent_style=tab
  indent_size=8
  trim_trailing_whitespace=true

[*.md]
trim_trailing_whitespace = false

# default
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
